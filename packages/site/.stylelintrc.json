{
  "extends": "@marcbouchenoire/stylelint-config",
  "rules": {
    "at-rule-no-unknown": [
      true,
      {
        "ignoreAtRules": ["tailwind", "apply", "layer"]
      }
    ],
    "declaration-block-trailing-semicolon": null,
    "function-no-unknown": [
      true,
      {
        "ignoreFunctions": ["screen", "theme"]
      }
    ],
    "no-descending-specificity": null
  }
}
