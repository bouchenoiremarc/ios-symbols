{
  "name": "root",
  "private": true,
  "husky": {
    "hooks": {
      "pre-commit": "lerna run --concurrency 1 --stream precommit --since HEAD --exclude-dependents"
    }
  },
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "site:dev": "yarn workspace site dev",
    "site:build": "yarn workspace site build",
    "generate": "yarn workspace ios-symbols generate",
    "build": "yarn workspace ios-symbols build",
    "lint": "lerna run lint --stream",
    "test": "lerna run test --stream",
    "prepare": "lerna run prepare --stream",
    "release": "lerna publish",
    "clean": "lerna run clean && rimraf node_modules"
  },
  "devDependencies": {
    "@bouchenoiremarc/eslint-config": "^1.6.0",
    "@types/node": "^16.4.2",
    "@types/rimraf": "^3.0.0",
    "eslint": "^8.0.1",
    "husky": "4.3.8",
    "lerna": "^4.0.0",
    "lint-staged": "^11.0.0",
    "prettier": "^2.3.2",
    "rimraf": "^3.0.2",
    "tsc-mixed": "^1.0.0",
    "typescript": "^4.3.5"
  }
}
